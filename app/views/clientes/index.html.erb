
<!-- Modal Crear cliente-->

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">

      <h4 class="modal-title" id="exampleModalLongTitle">Nuevo cliente</h4>

      <!--<div class=" border-bottom border-info modal-title "  id="exampleModalLongTitle">
          <h3>Nuevo cliente</h3>
      </div>-->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="container border border-bottom ">
        <div class="modal-body">

            <%= form_with(model: @cliente, local: true) do |form| %>


              <div class="field">
              <!--  <%= form.label :Nombre %>-->
                <%= form.text_field :nombre, id: :cliente_nombre, :class => "form-control", :placeholder => "Nombre"%>
              </div>
<br>
              <div class="field">
              <!--  <%= form.label :Apellido_paterno %>-->
                <%= form.text_field :apellido_p, id: :cliente_apellido_p, :class => "form-control", :placeholder => "Apellido_paterno" %>
              </div>

              <div class="field">
                <%= form.label :Apellido_materno %>
                <%= form.text_field :apellido_m, id: :cliente_apellido_m, :class => "form-control", :placeholder => "Apellido_materno" %>
              </div>

              <div class="field">
                <%= form.label :Direccion %>
                <%= form.text_field :direccion, id: :cliente_direccion, :class => "form-control", :placeholder => "Direccion" %>
              </div>

              <div class="field">
                <%= form.label :Telefono %>
                <%= form.text_field :telefono, id: :cliente_telefono, :class => "form-control", :placeholder => "Telefono"%>
              </div>

              <!--<div class="field">
                <%= form.label :activo %>
                <%= form.check_box :activo, id: :cliente_activo %>
              </div>-->
  <br>


  <div class="form-group">


        <button type="submit" class="btn btn-info btn-large btn-block" id="btnIngresar">Crear</button>

  </div>


              <!--<div class="actions">

                <%= form.submit :class => "btn btn-primary btn-sm"%>
              </div>-->
            <% end %>


        </div>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn  btn-large btn-block btn-outline-danger" data-dismiss="modal">Cerrar</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button>-->
      </div>
    </div>
  </div>
</div>





<div class="container border  ">
<p id="notice"><%= notice %></p>
<div class=" border-bottom border-info">
  <h1>Clientes</h1>

</div>


<br>
<!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Launch demo modal
</button>-->
<button type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModalCenter">Agregar cliente</button>

<!--<%= link_to 'Agregar cliente', new_cliente_path %>-->
<br>

  <div class="table-responsive-xm ">

  <table class="table table-borderless">
    <thead >
      <tr class="table-info">
        <th>Nombre</th>
        <th>Apellido Paterno</th>
        <th>Apellido Materno</th>
        <th>Direccion</th>
        <th>Telefono</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%=  link_to cliente.nombre, cliente%></td>
          <td><%= cliente.apellido_p %></td>
          <td><%= cliente.apellido_m %></td>
          <td><%= cliente.direccion %></td>
          <td><%= cliente.telefono %></td>

          <!--<td><%= link_to 'Mostrar', cliente %></td>-->
          <td><%= link_to 'Modificar', edit_cliente_path(cliente) %></td>
          <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>
</div>

<br>
