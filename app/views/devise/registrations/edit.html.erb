



    <h2 class="title">
      Realizar cambios del Usuario
    </h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-row">
            <div class="col-md-4 mb-3">


                      <label for="validationCustom01">Nombre</label>
                  <%= f.text_field :nombre, autofocus: true,autocomplete: "nombre", :class => "form-control"  %>


            </div>

            <div class="col-md-4 mb-3">
              <label for="validationTooltipUsername">Nombre de Usuario</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="validationTooltipUsernamePrepend">@</span>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Actualmente en espera de confirmación para: <%= resource.unconfirmed_email %></div>
                <% end %>


                      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>


                <div class="invalid-tooltip">
                  Please choose a unique and valid username.
                </div>
              </div>
            </div>

            <div class="col-md-3 mb-3">
              <label>Foto</label>
            <div class="custom-file">
              <%= f.file_field :avatar, :class => "custom-file-inpu" %>
            <%= f.label :avatar, "Subir Foto", :class => "custom-file-label" %>
            </div>
            </div>
          </div>




          <div class="form-row">
            <div class="col-md-4 mb-3">

              <label for="validationTooltip03">Contraseña</label>

                <%= f.password_field :password, autocomplete: "contraseña",placeholder: "Contraseña", :class => "form-control" %>
  <i>(Dejar en blanco si no quieres cambiarlo)</i>


              <div class="invalid-tooltip">
                Please provide a valid city.
              </div>
            </div>

            <div class="col-md-3 mb-3">

              <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> caracteres mínimo</em>
              <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "nueva contraseña",placeholder: "Confirmar Contraseña", :class => "form-control" %>


            </div>

            <div class="col-md-3 mb-3">
              <label for="validationTooltip05">Contraseña Actual</label>

<%= f.password_field :current_password, autocomplete: "contraseña actual", :class => "form-control",placeholder: "confirmar sus datos" %>
<i>(Necesitamos su contraseña actual para confirmar sus cambios.)</i>

            </div>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <div class="actions">
                  <%= f.submit "Actualizar", :class => "button is-link"%>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <h3>Cancelar mi cuenta</h3>

        <p>Infeliz? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button is-danger" %></p>


        <%= link_to "Regresar", :back %>






<!--termina form--->
