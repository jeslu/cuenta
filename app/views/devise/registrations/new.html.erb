<div class="container py-5">
  <div class="row">
    <div class="col-md-12">

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card rounded-0">
      <div class="">
          <h3 class="mb-0">
                                <img  class="img-fluid mx-auto d-block rounded" src="<%= asset_path 'CodeWeb_logo.jpg' %>"alt="400" width="300">
         </h3>
         <br>
         <h2 class="title text-center">
                   Crear cuenta
         </h2>
      </div>
        <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <!--<label for="uname1">Nombre de usuario</label>-->
      <!--  <%= f.label :nombre, "Nombre de Usuario" %><br />-->
      <input type="text" class="form-control form-control-lg rounded-0" name="user[nombre]" id="nombre" placeholder="Nombre de usuario">
      <!-- <%= f.text_field :nombre, autofocus: true,class: "form-control", placeholder: "JESUS PEREZ ANGELES" %>-->
      </div>
      <div class="form-group">
        <!--<label for="uname1">email</label>-->
        <input type="email" class="form-control form-control-lg rounded-0" name="user[email]" id="correo" placeholder="Correo electrónico">
      </div>

      <div class="form-group">
        <label for="uname1">Contraseña</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimos)</em>
        <% end %><br />
        <input type="password" class="form-control form-control-lg rounded-0" name="user[password]" id="pwd1" placeholder="Contraseña (6 caracteres minimos">
      </div>

      <div class="form-group">
        <!--<label for="uname1">Confirmar Contraseña</label>-->
        <input type="password" class="form-control form-control-lg rounded-0" name="user[password]" id="pwd1" placeholder="Confirmar Contraseña">
      </div>
      <div class="form-group">

<div class="actions">
            <button type="submit" class="btn btn-info btn-large btn-block" id="btnIngresar">Registrarse</button>
            <%= render "devise/shared/links" %>
      </div>





      <!--<div class="actions">
        <%= f.submit "Registrarse", class:"btn btn-info"%>
        <%= render "devise/shared/links" %>
      </div>-->
    <% end %>
    </div>
      </div>
      </div>
      </div>
        </div>
    </div>

</div>
