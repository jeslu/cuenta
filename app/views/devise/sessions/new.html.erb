<h2>INICIO DE SECCION</h2>





<body class="layout-default">
  <section class="hero is-fullheigt is-medium ">
        <div class="hero-body">
          <div class="container">
            <div class="columns is-centered"">
              <article class="card is-rounded">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="card-content">
                  <h1 class="title">

                    <img src="https://placeholdit.imgix.net/~text?txtsize=13&txt=150%C3%9750&w=150&h=50" alt="logo" width="200">
                  </h1>

                  <p class="control has-icon">
<i class="fas fa-envelope"></i>
                    <input class="input" type="email" placeholder="Email" name="user[email]">

                  </p>
                  <p class="control has-icon">
                                  <i class="fa fa-lock"></i>
                    <input class="input" type="password" placeholder="Password" name="user[password]">

                  </p>
                  <% if devise_mapping.rememberable? %>
                  <p class="control">  <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                    <% end %>
                  <p class="control">
                    <button class="button is-primary is-medium is-fullwidth">
                      <i class="fa fa-user"></i>
                      Ingresar
                    </button>
                  </p>

                </div>
                    <% end %>
                        <%= render "devise/shared/links" %>
              </article>

            </div>
          </div>
    </div>
  </section>
</body>
