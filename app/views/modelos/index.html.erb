<br>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container border border-bottom ">
          <div class="modal-body">
        <%= form_with(model:  @modelo, local: true) do |form| %>


          <div class="field">
            <%= form.label :modelo %>
            <%= form.text_field :modelo, id: :modelo_modelo, :class => "form-control" %>
          </div>

          <div class="field">
            <%= form.label :activo %>
            <%= form.check_box :activo, id: :modelo_activo %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
        </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>




<div class="card-deck ">
<% @modelos.each do |modelo| %>
<div class="card bg-light mb-3" style="max-width: 10rem;">
  <div class="card-header text-center text-white bg-info mb-3" ></div>
  <div class="card-body text-center ">
    <td><%= modelo.modelo %></td>
    <!--<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
  </div>
  <div class="card-footer bg-transparent">


<!--<%= link_to 'Show', modelo %>-->
    <%= link_to 'Editar', edit_modelo_path(modelo) %>
    <%= link_to 'Eliminar', modelo, method: :delete, data: { confirm: 'Are you sure?' } %>


  </div>
</div>
<% end %>
</div>
