<p id="notice"><%= notice %></p>
<!-- Modal Crear equipo-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class=" border-bottom border-info">
          <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLongTitle">Nuevo equipo</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>

      <div class="container border  ">
        <div class="modal-body">
          <%= form_with(model: @os_equipo, local: true) do |form| %>
            <div class="field">
              <%= form.label :n_serie %>
              <%= form.text_field :n_serie, id: :os_equipo_n_serie,:class => "form-control" %>
            </div>
            <div class="field">
              <%= form.label :marca_id %>
              <%= form.collection_select(:marca_id, Marca.all, :id, :marca, options = {}, {:class => "form-control"})%>
            </div>
            <div class="field">
              <%= form.label :modelo_id %>
              <%= form.collection_select(:modelo_id, Modelo.all, :id, :modelo, options = {}, {:class => "form-control"})%>
            </div>
            <div class="field">
              <%= form.label :tipo_equipo_id %>
              <%= form.collection_select(:tipo_equipo_id, Os::TipoEquipo.all, :id, :tipo, options = {}, {:class => "form-control"})%>
            </div>
            <br>
            <div class="form-group">
              <button type="submit" class="btn btn-info btn-large btn-block" id="btnIngresar">Crear</button>
            </div>
          <% end %>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn  btn-large btn-block btn-outline-danger" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
<!-- termina Modal de equipo-->







